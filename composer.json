{
  "name"        : "icaruspanel/techne",
  "type"        : "library",
  "require"     : {
    "php"          : "^8.5",
    "nesbot/carbon": "^3.1",
    "psr/container": "^2.0"
  },
  "require-dev" : {
    "phpunit/phpunit"    : "^13.0",
    "phpstan/phpstan"    : "^2.1",
    "infection/infection": "^0.32.5",
    "readalizer/readalizer": "^1.0"
  },
  "autoload"    : {
    "psr-4": {
      "Engine\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config"      : {
    "allow-plugins": {
      "infection/extension-installer": true
    }
  },
  "scripts"     : {
    "test"   : "@php vendor/bin/phpunit",
    "analyze": "@php vendor/bin/phpstan analyse src tests --memory-limit=2G",
    "mutate" : "@php vendor/bin/infection --threads=4"
  }
}
